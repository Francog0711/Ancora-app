<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resource/css/login-register.css">
    <title>Register</title>
</head>
<body>
    <div class="register-form">
        <h1>Registrarse</h1>
        <form action="/register" method="POST">
            <label for="user">Usuario</label>
            <input type="text" name="user" required>
            <label for="name">Nombre</label>
            <input type="text" name="name" required>
            <label for="user">Rol</label>
            <select id="rol" name="rol" class="select-css" required>
            <option value="admin" selected>Admin</option>
            <option value="data entry">Data Entry</option>
            </select>
            <label for="pass">Password</label>
            <input type="password" name="pass" required>
            <div style="display: inline;">
                <a href="login" class="btn-cancel">Cancel</a><input type="submit" class="btn-save" value="Save">

            </div>
        </form>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <% if(typeof alert != "undefined") { %>
    <script>
        Swal.fire({
            title: '<%= alertTitle %>',
            text: '<%= alertMessage %>',
            icon:'<%= alertIcon %>',
            showConfirmButton: <%= showConfirmButton %> ,
            timer: <%= timer %>
        }).then(()=>{
            window.location='/ <%= ruta %>'
        })
        </script>
        
        <% } %>

</body>
</html>

